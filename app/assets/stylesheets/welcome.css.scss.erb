@import "foundation/components/tables";

@mixin helvetica($size, $color) {
  font-size: $size;
  font-family: "HelveticaNeue", sans-serif;
  font-weight: bold;
  text-align: center;
  text-transform: uppercase;
  color: $color;
  letter-spacing: 0.4em;
}

@mixin futura($size, $color) {
  font-size: $size;
  font-family: "Futura", "HelveticaNeue", sans-serif;
  font-weight: bold;
  text-transform: uppercase;
  color: $color;
  letter-spacing: 0.1em;
}

@mixin transition($duration) {
  -webkit-transition: $duration;
  -moz-transition: $duration;
  -ms-transition: $duration;
  -o-transition: $duration;
  transition: $duration;
}

@mixin border-left-bottom-white {
  border-left: 3px solid white;
  border-bottom: 3px solid white;
}

@mixin one-border($direction, $color) {
  border-#{$direction}: 3px solid $color;
}

div, 
ul,
li,
p, 
.skills-left,
.contact-list {
  float: left;
}

.skills, 
.about, 
.links,
.contact {
  width: 20%;
}

ul,
#top,
.profile,
.skills-title,
.skills-list, 
.about-title,
.about-text,
.links-title, 
.links-list, 
.contact-title,
.contact-list {
  width: 100%;
}

li, h1 {
  text-align: center;
}

#top {
  height: 69em;
  background-image: url(<%= asset_path 'calipixel.jpg' %>);
  -webkit-background-size: 100%;
  background-size: 100%;
  .title {
    width: 80%;
    margin-left: 10%;
    border: 3px solid white;
    h1 {
      padding-top: 0.5em;
      padding-bottom: 0.5em;
      margin-top: 0.5em; 
      @include helvetica(5em, white);
    }
  }

  .profile {
    margin-top: 1em;
    padding: 1em;
    img {
      width: 10%;
      margin-left: 45%;
      border-radius: 100%;
    }
  }

  .skills {
    margin-left: 10%;
    
    .skills-title {
      background-color: transparent;
      @include border-left-bottom-white;
      @include transition(0.2s);

      h1 {
        font-style: italic;
        @include futura(1.5em, white);
        @include transition(0.2s);
      }

      &:hover {
        color: black;
        background-color: green;
        @include transition(0.2s);
      }
    }
    .skills-list {
      height: 16em;
      p {
        width: 50%;
        height: 5em;
        margin-bottom: 0;
        padding: 0.5em;
        @include border-left-bottom-white;
        @include futura(0.9em, white);
      }
    }
    .skills-chart {
      width: 20%;
      float: left;
      background-color: white;
      clear: both;
    }
  }

  .about-title {
    background-color: transparent;
    @include border-left-bottom-white;

    @include transition(0.2s);
    h1 {
      font-style: italic;
      @include futura(1.5em, white);
    }
    &:hover {
      background-color: tomato;
    }
  }
  .about-text {
    float: left;
    padding: 1.5em;
    @include border-left-bottom-white;
    p {
      text-align: left;
      margin-top: 0.5em; 
      @include futura(0.8em, white);
    }
  }
  

  .links-title {
    background-color: transparent;
    @include border-left-bottom-white;
    
    @include transition(0.2s);
    h1 {
      font-style: italic;
      @include futura(1.5em, white);
    }
    &:hover {
      background-color: orange;
    }
  }

  .links-list ul {
    margin-top: 0.5em;
    list-style-type: none;
    text-align: left;
    @include futura(0.8em, white);
    
  }

  .contact-title {
    background-color: transparent;
    @include border-left-bottom-white;
    @include one-border(right, white);
    @include transition(0.2s);
    h1 {
      font-style: italic;
      @include futura(1.5em, white);
    }
    &:hover {
      background-color: blue;
    }
  }
  .contact-list {
    padding: 1.5em;
    p {
      text-align: left;
      margin-top: 0.5em; 
      @include futura(0.8em, white);
    }
  } 
}


