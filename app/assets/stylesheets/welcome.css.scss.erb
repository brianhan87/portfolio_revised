@import "foundation/components/tables";
@import "welcome-mixins";
@import "welcome-variables";

div, 
p,
.link, 
.skills-list {
  float: left;
}

#top,
.link,

.skills-list, 
.about-title,
.about-text,
.links-title, 
.links-list, 
.contact-title,
.contact-list {
  width: 100%;
}

h1 {
  text-align: center;
}

#top {
  height: 83em;
  background-image: url(<%= asset_path 'calipixel.jpg' %>);
  -webkit-background-size: 100%;
  background-size: 100%;
  .title {
    width: 60%;
    margin-left: 20%;
    margin-top: 5em;
    border: $border-style;
    h1 {
      padding-top: 0.5em;
      padding-bottom: 0.5em;
      @include helvetica(6em, white);
    }
  }

  nav {
    float: left;
    width: 10%;
    margin-left: 20%; 
    border-left: $border-style;
    border-right: $border-style;
    
    .nav-links {
      .link {
        border-bottom: $border-style;
        font-style: italic;
        padding: 1em;
        @include futura(2em, white);
        &:hover {
          background-color: yellow;
          color: black;
        }
      }
    }
  }

  #skills {
    width: 50%;
    visibility: hidden;
    // border-bottom: $border-style;
    .skills-list {
      width: 100%;
      // visibility: hidden;
      p {
        width: 50%;
        margin: 0;
        padding: 1em;
        border-bottom: $border-style;
        border-right: $border-style;
        @include futura(1em, white);
      }
    }
  }














