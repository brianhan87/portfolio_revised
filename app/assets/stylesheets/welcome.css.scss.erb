@import "welcome-mixins";
@import "welcome-variables";

* {
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}

// Laptops at 1300px
@media screen and (min-width: 81.25em) {
  
  .nav {
    display: none;
  }

  body {
    margin: 0;
  }

  nav, div, p, ul, li,
  .nav-links, 
  .link, 
  .skills-list {
    float: left;
  }

  #top,
  .link {
    width: 100%;
  }

  h1 {
    text-align: center;
  }

  #about, #skills {
    margin-left: 0px;
    margin-top: 0px;
    margin-bottom: 0px;
  }

  #top {
    height: 90%;
    background: url(<%= asset_path 'calipixel-lowres.jpg' %>)fixed no-repeat;
    -webkit-background-size: 100%;
    background-size: 100%;
    .title {
      width: 60%;
      margin-left: 20%;
      margin-top: 5em;
      border: $border-style;
      h1 {
        padding-top: 0.5em;
        padding-bottom: 0.5em;
        @include helvetica(6em, white);
      }
      a {
        float: left;
        width: 33.33%;
        text-align: center;
        padding-top: 1em;
        padding-bottom: 1em;
        font-weight: lighter;
        text-decoration: none;
        border-top: $border-style;
        @include helvetica(1em, black);
        background-color: white;
        &:hover {
          background-color: transparent;
          color: white;
          text-decoration: underline;
          // @include one-border(top, orange);
        }
      }
    }

    #about {
      float: left;
      width: 60%;
      margin-left: 20%;
      border-bottom: $border-style;

      .about-container {
        margin-top: 3em;
        margin-bottom: 3em;
        margin-left: 2em;
        margin-right: 2em;
        p {
          padding-left: 4em;
          padding-right: 4em;
          @include futura(1em, white);
        }
      }
    }

    #skills {
      float: left;
      width: 60%;
      margin-left: 20%;
      border-left: $border-style;

      .skills-list {
        width: 100%;
        p {
          width: 50%;
          margin: 0;
          padding: 1em;
          border-bottom: $border-style;
          border-right: $border-style;
          text-align: center;
          @include futura(1em, white);
        }
      }
    }
    .contact {
      float: left;
      width: 33.33%;
      padding: 0;
      margin-left: 33.33%;
      margin-top: 5em;
      padding: 1em;
      background-color: white;
      a {
        float: left;
        width: 100%;
        text-align: center;
        font-weight: lighter;
        border: 1px solid white;
        text-decoration: none;
        @include futura(1em, black);
        
        &:hover {
          text-decoration: underline;
        }
      }
    }
  }
}

