.container {
  width: 100%;
  height: 60em;
  float: left;
  background-image: url(<%= asset_path 'about-background.jpg' %>);
  background-size: 100%;
  .title {
    float: left;
    background-color: white;
    width: 33.33%;
    margin-left: 33.33%;
    margin-top: 17em;

    h1 {
      font-family: "HelveticaNeue", sans-serif;
      font-weight: bold;
      text-align: center;
      text-transform: uppercase;
      padding: 2.5em;
    }
  }
}
