#top {
  width: 100%;
  height: 49em;
  float: left;
  background-image: url(<%= asset_path 'calipixel.jpg' %>);
  -webkit-background-size: 100%;
  background-size: 100%;
  .title {
    float: left;
    width: 80%;
    margin-left: 10%;

    h1 {
      font-family: "HelveticaNeue", sans-serif;
      font-weight: bold;
      text-align: center;
      text-transform: uppercase;
      color: white;
      border: 3px solid white;
      letter-spacing: 0.4em;
      padding-top: 1em;
      padding-bottom: 1em;
      margin-top: 0.5em; 
      font-size: 5em;
    }
  }
  .about {
    float: left;
    width: 50%;
    margin-left: 10%;
    margin-top: 2em;
    border: 3px solid white;
    padding: 2.5em;
    p {
      font-family: "Futura", "HelveticaNeue", sans-serif;
      font-weight: bold;
      text-align: left;
      text-transform: uppercase;
      color: white;
      letter-spacing: 0.1em;
      margin-top: 0.5em; 
      font-size: 1em; 
    }
    .skills {
      color: black;
    }
  }
}
