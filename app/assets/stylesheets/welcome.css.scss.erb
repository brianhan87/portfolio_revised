@mixin transition($duration) {
  -webkit-transition: $duration;
  -moz-transition: $duration;
  -ms-transition: $duration;
  -o-transition: $duration;
  transition: $duration;
}


#top {
  width: 100%;
  height: 50em;
  float: left;
  background-image: url(<%= asset_path 'calipixel.jpg' %>);
  -webkit-background-size: 100%;
  background-size: 100%;
  .title {
    float: left;
    width: 80%;
    margin-left: 10%;
    border-top: 3px solid white;
    border-left: 3px solid white;
    border-right: 3px solid white;

    h1 {
      font-family: "HelveticaNeue", sans-serif;
      font-weight: bold;
      text-align: center;
      text-transform: uppercase;
      color: white;
      letter-spacing: 0.4em;
      padding-top: 0.5em;
      padding-bottom: 0.5em;
      margin-top: 0.5em; 
      font-size: 5em;
    }
  }
  .profile {
    float: left;
    margin-top: 1em;
    width: 100%;
    padding: 1em;
    img {
      width: 10%;
      margin-left: 45%;
      border-radius: 100%;
      opacity: 0.7;
      @include transition(0.2s);
      
      &:hover {
        opacity: 1;
        -webkit-transition: 0.2s;
        -moz-transition: 0.2s;
        -ms-transition: 0.2s;
        -o-transition: 0.2s;
        transition: 0.2s;
      }
    }
  }

  .skills {
    float: left;
    width: 40%;
    margin-left: 10%;
    // margin-top: 25em; 
    // margin-bottom: 25em; 
    border-left: 3px solid white;
    border-top: 3px solid white;
    border-bottom: 3px solid white;
    // padding: 2.5em;   
    ul {
      width: 100%;
      float: left;
      margin-top: 1em;
      list-style-type: none;
      font-family: "Futura", "HelveticaNeue", sans-serif;
      font-weight: bold;
      text-align: left;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      font-size: 1em; 
      // text-align: left;
      li {
        float: left;
        width: 25%;
        margin-left: 1em;
        color: white;
        background-color: transparent;
        padding: 0.5em;
        margin-top: 1em;
        margin-bottom: 1em;
        margin-right: 1em;
        &:hover {
          background-color: yellow;
          color: black;
        }
      }
    }
  }
  .about {
    float: left;
    width: 40%;
    margin-bottom: 25em; 
    border: 3px solid white;
    padding: 2.5em;   
    p {
      font-family: "Futura", "HelveticaNeue", sans-serif;
      font-weight: bold;
      text-align: left;
      text-transform: uppercase;
      color: white;
      letter-spacing: 0.1em;
      margin-top: 0.5em; 
      font-size: 1em; 
    }
  }
}
