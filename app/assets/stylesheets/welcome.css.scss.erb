@import "foundation/components/tables";
@import "welcome-mixins";
@import "welcome-variables";

nav,
div, 
p,
ul,
li,
.nav-links,
.link, 
.skills-list {
  float: left;
}

#top,
.link {
  width: 100%;
}

h1 {
  text-align: center;
}

#about, #skills {
  margin-left: 0px;
  margin-top: 0px;
  margin-bottom: 0px;
}

#top {
  height: 83em;
  background-image: url(<%= asset_path 'calipixel.jpg' %>);
  -webkit-background-size: 100%;
  background-size: 100%;
  .title {
    width: 60%;
    margin-left: 20%;
    margin-top: 5em;
    border: $border-style;
    h1 {
      padding-top: 0.5em;
      padding-bottom: 0.5em;
      @include helvetica(6em, white);
    }
    a {
      float: left;
      width: 33.33%;
      text-align: center;
      padding-top: 1em;
      padding-bottom: 1em;
      font-weight: lighter;
      border-top: $border-style;
      @include helvetica(1em, white);
      &:hover {
        background-color: white;
        color: black;
      }
    }
  }

  #about {
    float: left;
    width: 60%;
    margin-left: 20%;
    border-bottom: $border-style;

    .about-container {
      margin-top: 3em;
      margin-bottom: 3em;
      margin-left: 2em;
      margin-right: 2em;
      p {
        padding-left: 4em;
        padding-right: 4em;
        @include futura(1em, white);
      }
    }
  }

  #skills {
    float: left;
    width: 60%;
    margin-left: 20%;
    border-left: $border-style;

    .skills-list {
      width: 100%;
      p {
        width: 50%;
        margin: 0;
        padding: 1em;
        border-bottom: $border-style;
        border-right: $border-style;
        text-align: center;
        @include futura(1em, white);
      }
    }
  }
  .contact {
    float: left;
    width: 20%;
    padding: 0;
    margin-left: 40%;
    margin-top: 5em;
    a {
      float: left;
      width: 100%;
      text-align: center;
      font-weight: lighter;
      padding-top: 1em;
      padding-bottom: 1em;
      border: 1px solid white;
      @include futura(1em, white);
      &:hover {
        background-color: white;
        color: black;
      }
    }
  }
}

