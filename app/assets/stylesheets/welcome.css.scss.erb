@mixin helvetica($size, $color) {
  font-size: $size;
  font-family: "HelveticaNeue", sans-serif;
  font-weight: bold;
  text-align: center;
  text-transform: uppercase;
  color: $color;
  letter-spacing: 0.4em;
}

@mixin futura($size, $color) {
  font-size: $size;
  font-family: "Futura", "HelveticaNeue", sans-serif;
  font-weight: bold;
  text-transform: uppercase;
  color: $color;
  letter-spacing: 0.1em;
}

@mixin transition($duration) {
  -webkit-transition: $duration;
  -moz-transition: $duration;
  -ms-transition: $duration;
  -o-transition: $duration;
  transition: $duration;
}

div, li {
  float: left;
}


#top {
  width: 100%;
  height: 50em;
  background-image: url(<%= asset_path 'calipixel.jpg' %>);
  -webkit-background-size: 100%;
  background-size: 100%;
  .title {
    width: 80%;
    margin-left: 10%;
    border-top: 3px solid white;
    border-left: 3px solid white;
    border-right: 3px solid white;

    h1 {
      padding-top: 0.5em;
      padding-bottom: 0.5em;
      margin-top: 0.5em; 
      @include helvetica(5em, white);
    }
  }

  .profile {
    width: 100%;
    margin-top: 1em;
    padding: 1em;
    img {
      width: 10%;
      margin-left: 45%;
      border-radius: 100%;
      opacity: 0.7;
      @include transition(0.2s);

      &:hover {
        opacity: 1;
        @include transition(0.2s);
      }
    }
  }

  .skills {
    width: 40%;
    margin-left: 10%;
    border-left: 3px solid white;
    border-top: 3px solid white;
    border-bottom: 3px solid white;
    .skills-title {
      width: 100%;
      background-color: white;
      @include transition(0.2s);

      a, h1 {
        color: black;
        font-style: italic;
        text-align: center;
        @include futura(1.2em, black);
        @include transition(0.2s);
      }

      &:hover {
        text-decoration: underline;
        @include transition(0.2s);
      }
    }
    ul {
      width: 100%;
      margin-top: 1em;
      list-style-type: none;
      text-align: left;
      @include futura(1em, white);
      a li {
        float: left;
        background-color: white;
        color: black;
        opacity: 0.8;
        @include transition(0.2s);
        img {
          float: right;
          width: 30px;
          padding-left: 0.2em;
          padding-right: 0.2em;
        }

        &:hover {
          opacity: 1;
          @include transition(0.2s);
        }
      }
      li {
        width: 25%;
        background-color: transparent;
        padding: 0.5em;
        margin: 1em;
        text-align: center;
        @include transition(0.2s);

        &:hover {
          background-color: yellow;
          color: black;
          @include transition(0.2s);
        }
      }
    }
  }
  .about {
    width: 40%;
    margin-bottom: 25em; 
    padding: 2.5em;   
    border: 3px solid white;
    p {
      text-align: left;
      margin-top: 0.5em; 
      @include futura(1em, white);

    }
  }
}



